<!-- basics page -->
{{welcome-card text="Give your class a photo, name, and brief description."}}

<div class="mdl-cell mdl-cell--9-col-desktop mdl-cell--6-col-tablet mdl-cell--4-col-phone">
  <!-- photo upload -->
  <div class="edit-card mdl-shadow--2dp">
    <div class="photo-upload-empty">
      <h4>Choose a photo</h4>
    </div>

    {{button-round class="align-right" icon="local_see"}}

    <div class="edit-card-inset">
      <!-- title -->
      <div class="mdl-textfield mdl-js-textfield">
        <label class="mdl-textfield__label" for="title">Title</label>
        {{input class="mdl-textfield__input" type="text" label="Title" id="title" value=(mut title) pattern="[A-Z,a-z, ]*"}}
        <span class="mdl-textfield__error">Letters and spaces only</span>
      </div>

      <!-- longer description -->
      <div class="mdl-textfield mdl-js-textfield">
        <label class="mdl-textfield__label" for="description">Description</label>
        {{textarea class="mdl-textfield__input" type="text" rows="4" maxrows="6" value=(mut description)
         id="description"}}
      </div>

      {{continue-button actionToCall="continue"}}
    </div>

  </div>
</div>
