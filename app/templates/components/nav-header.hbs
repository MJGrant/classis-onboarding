{{!-- Navigation bar across top of all pages

Passed in parameters:
@pageTitle    - Title of page (route)

--}}

<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header">

    {{#if (eq pageTitle "Classis")}}
      <div class="mdl-layout-icon mdl-button--icon">
        <i class="material-icons">looks</i>
      </div>
    {{else}}
      <button class="mdl-layout-icon mdl-button mdl-js-button mdl-button--icon" onclick="history.go(-1);">
        <i class="material-icons">arrow_back</i>
      </button>
    {{/if}}

    <div class="mdl-layout__header-row">

      <!-- Title -->
      <span class="mdl-layout-title">{{pageTitle}}</span>

      <!-- Add spacer, to align navigation dots to the right -->
      <div class="mdl-layout-spacer"></div>

      <!-- Right aligned menu below button -->
      <button id="user-menu"
            class="mdl-button mdl-js-button mdl-button--icon">
      <i class="material-icons">more_vert</i>
      </button>


      <!-- User menu dropdown -->
      <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
        for="user-menu">

      <li disabled class="mdl-menu__item">
        {{user-menu-item icon="account_box" text="Username"}}
      </li>

      <li class="mdl-menu__item">
        {{user-menu-item icon="school" text="Profile"}}
      </li>

      <li disabled class="mdl-menu__item">
        {{user-menu-item icon="settings" text="Settings"}}
      </li>

      <li class="mdl-menu__item">
        {{user-menu-item icon="indeterminate_check_box" text="Log out"}}</li>
      </ul>

    </div>
  </header>

</div>
