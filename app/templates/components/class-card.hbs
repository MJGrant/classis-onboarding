{{!-- class-card is used to display user's saved classes

@class gets passed in whole

Pick it apart like so:

- class.title
- class.description
- class.id (temp, for debugging)

--}}

<div class="demo-card-square mdl-card mdl-shadow--2dp center-card">
  <div class="mdl-card__title mdl-card--expand">
    <h2 class="mdl-card__title-text">{{class.title}} {{class.id}}</h2>
  </div>
  <div class="mdl-card__supporting-text">
    {{class.description}}
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
      <!-- if index = 0, it's the first one -->
      {{#link-to 'basics'}}Edit{{/link-to}}
    </a>
  </div>
</div>
