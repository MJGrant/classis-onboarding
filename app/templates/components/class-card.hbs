{{!-- class-card is used to display user's saved classes and the empty "add new class" card

@class gets passed in whole

Pick it apart like so:

- class.title
- class.description
- class.id (temp, for debugging)

--}}

{{#if class.id}}
  <div class="demo-card-square mdl-card mdl-shadow--2dp center-card">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text">{{class.title}} {{class.id}}</h2>
    </div>

    <div class="mdl-card__supporting-text">
      {{class.description}}
    </div>

    <div class="mdl-card__actions mdl-card--border">
      <!-- goes to basics, but the text varies whether there are other classes saved -->
      {{#link-to 'basics' class="mdl-button no-padding-left mdl-button--colored mdl-js-button mdl-js-ripple-effect"}}
          <i class="material-icons mdl-list__item-icon">edit_circle</i>
          EDIT
      {{/link-to}}
    </div>
  </div>
{{else}}
{{#link-to 'basics' class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"}}
    <i class="material-icons mdl-list__item-icon">add_circle</i>
    ADD A CLASS
{{/link-to}}


{{/if}}
<br/>
