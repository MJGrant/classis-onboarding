<!-- main page of app -->
<div class="mdl-cell mdl-cell--9-col-desktop mdl-cell--6-col-tablet mdl-cell--4-col-phone">

<p>Sell your expertise to eager students. Set your own prices and schedule, your place or theirs.</p>

<h2>Your classes</h2>

<!-- each card represents a class the user has set up -->
{{#if classes}}
  {{#each class as |class|}}
    {{class-card}}
  {{/each}}

    {{#link-to 'basics' class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"}}
      <i class="material-icons mdl-list__item-icon">add_circle</i>
      ADD ANOTHER CLASS
    {{/link-to}}

{{else}}

    {{#link-to 'basics' class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"}}
      <i class="material-icons mdl-list__item-icon">add_circle</i>
      ADD YOUR FIRST CLASS
    {{/link-to}}

{{/if}}



  <ul>
    <li>{{#link-to 'basics'}}Basics{{/link-to}}</li>
    <li>{{#link-to 'location'}}Location{{/link-to}}</li>
    <li>Student types</li>
    <li>Availability and pricing</li>
    <li>Inclusions and Exclusions</li>
    <li>Contact</li>
  </ul>
</div>
